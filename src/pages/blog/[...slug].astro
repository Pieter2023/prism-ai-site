---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleCTA from '../../components/ArticleCTA.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.data.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const { title, description, publishDate, author, category, tags, slug } = post.data;
const formattedDate = new Date(publishDate).toLocaleDateString('en-CA', { year: 'numeric', month: 'long', day: 'numeric' });
const canonicalUrl = `https://prismaiservices.netlify.app/blog/${slug}/`;
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "datePublished": publishDate.toISOString(),
  "dateModified": publishDate.toISOString(),
  "author": { "@type": "Organization", "name": author, "url": "https://prismaiservices.netlify.app" },
  "publisher": { "@type": "Organization", "name": "Prism AI Services", "url": "https://prismaiservices.netlify.app" },
  "mainEntityOfPage": { "@type": "WebPage", "@id": canonicalUrl },
  "keywords": tags.join(', ')
};
---

<BaseLayout title={`${title} | Prism AI Blog`} description={description} canonicalUrl={canonicalUrl} jsonLd={jsonLd}>
  <article class="blog-article">
    <div class="container">
      <header class="article-header">
        <a href="/blog/" class="back-link">&larr; Back to Blog</a>
        <span class="article-category">{category}</span>
        <h1>{title}</h1>
        <div class="article-meta">
          <span class="author">{author}</span>
          <span class="sep">&bull;</span>
          <time datetime={publishDate.toISOString()}>{formattedDate}</time>
        </div>
        {tags.length > 0 && (
          <div class="article-tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
        )}
      </header>

      <div class="article-body">
        <Content />
      </div>

      <ArticleCTA />
    </div>
  </article>
</BaseLayout>

<style>
.blog-article { padding: 2rem 0 4rem; }
.article-header { max-width: 720px; margin: 0 auto 2rem; }
.back-link { color: #6366f1; text-decoration: none; font-size: 0.9rem; display: inline-block; margin-bottom: 1.5rem; }
.back-link:hover { text-decoration: underline; }
.article-category {
  display: inline-block; font-size: 0.75rem; font-weight: 600;
  text-transform: uppercase; letter-spacing: 0.05em; color: #a855f7;
  background: rgba(168,85,247,0.1); padding: 0.25rem 0.75rem;
  border-radius: 20px; margin-bottom: 1rem;
}
.article-header h1 { font-size: 2.2rem; line-height: 1.3; margin-bottom: 1rem; color: var(--color-text-heading); }
.article-meta { color: var(--color-text-muted); font-size: 0.9rem; margin-bottom: 1rem; }
.article-meta .sep { margin: 0 0.5rem; }
.article-tags { display: flex; gap: 0.5rem; flex-wrap: wrap; }
.tag { font-size: 0.75rem; color: var(--color-text-muted); background: var(--color-bg-card); border: 1px solid var(--color-border); padding: 0.2rem 0.6rem; border-radius: 12px; }
.article-body {
  max-width: 720px; margin: 0 auto; line-height: 1.8; color: var(--color-text-muted);
}
.article-body :global(h2) { font-size: 1.5rem; color: var(--color-text-heading); margin: 2rem 0 1rem; }
.article-body :global(h3) { font-size: 1.25rem; color: var(--color-text-heading); margin: 1.5rem 0 0.75rem; }
.article-body :global(p) { margin-bottom: 1.25rem; }
.article-body :global(ul), .article-body :global(ol) { margin-bottom: 1.25rem; padding-left: 1.5rem; }
.article-body :global(li) { margin-bottom: 0.5rem; }
.article-body :global(blockquote) { border-left: 3px solid #6366f1; padding-left: 1rem; margin: 1.5rem 0; font-style: italic; color: var(--color-text-muted); }
.article-body :global(strong) { color: var(--color-text-heading); }
.article-body :global(a) { color: #6366f1; }
</style>

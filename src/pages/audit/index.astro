<style>
.audit-hero {
  padding: 7rem 0 5rem;
  text-align: center;
  background: radial-gradient(ellipse at top, rgba(108, 60, 225, 0.15) 0%, transparent 55%);
}
.hero-badge {
  display: inline-block;
  padding: 0.5rem 1.25rem;
  background: rgba(108, 60, 225, 0.12);
  border: 1px solid rgba(108, 60, 225, 0.3);
  border-radius: 999px;
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--color-primary-light);
  margin-bottom: 2rem;
}
.audit-hero h1 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 1.5rem;
}
.hero-sub {
  font-size: 1.15rem;
  color: var(--color-text-muted);
  max-width: 620px;
  margin: 0 auto 2.5rem;
  line-height: 1.7;
}

.option-cards {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 1.5rem;
  align-items: stretch;
  max-width: 1040px;
  margin: 0 auto;
  text-align: left;
}
.option-card {
  position: relative;
  border-radius: var(--radius);
  border: 1px solid var(--color-border);
  padding: 2rem;
  background: var(--color-bg-card);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.option-card.free {
  background: rgba(255, 255, 255, 0.02);
  border-color: rgba(139, 92, 246, 0.3);
}
.option-card.paid {
  border: 1px solid transparent;
  background:
    linear-gradient(var(--color-bg-card), var(--color-bg-card)) padding-box,
    linear-gradient(135deg, rgba(108, 60, 225, 0.95), rgba(139, 92, 246, 0.8), rgba(6, 182, 212, 0.7)) border-box;
  box-shadow: 0 16px 38px rgba(108, 60, 225, 0.28);
}
.option-card h2 {
  font-size: 1.45rem;
  margin: 0.25rem 0 0.35rem;
}
.option-card p {
  color: var(--color-text-muted);
  line-height: 1.65;
  margin: 0;
}
.option-badge {
  display: inline-flex;
  width: fit-content;
  padding: 0.35rem 0.75rem;
  border-radius: 999px;
  border: 1px solid rgba(139, 92, 246, 0.4);
  background: rgba(139, 92, 246, 0.16);
  color: var(--color-primary-light);
  font-size: 0.78rem;
  letter-spacing: 0.04em;
  font-weight: 700;
  text-transform: uppercase;
}
.paid-badge {
  background: linear-gradient(135deg, rgba(108, 60, 225, 0.32), rgba(6, 182, 212, 0.28));
  border-color: rgba(108, 60, 225, 0.55);
  color: #e9ddff;
}
.option-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: grid;
  gap: 0.55rem;
}
.option-list li {
  color: #d7d4e6;
  font-size: 0.95rem;
}
.option-note {
  font-size: 0.82rem;
  color: var(--color-text-muted);
  margin-top: -0.25rem;
}

.hero-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 1rem;
}
.hero-note {
  font-size: 0.85rem;
  color: var(--color-text-muted);
}
.btn-lg { font-size: 1.1rem; padding: 0.9rem 2.2rem; }
.audit-section { padding: 5rem 0; }
.audit-section.alt-bg { background: var(--color-bg-card); }
.section-title { font-size: 2rem; text-align: center; margin-bottom: 3rem; }
.deliverables-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
}
.deliverable-card { text-align: center; padding: 2rem; }
.deliverable-icon { font-size: 2.5rem; margin-bottom: 1rem; }
.deliverable-card h3 { font-size: 1.2rem; margin-bottom: 0.75rem; }
.deliverable-card p { color: var(--color-text-muted); line-height: 1.6; }
.two-col {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 3rem;
}
.col-title { font-size: 1.1rem; margin-bottom: 1rem; }
.check-list, .cross-list { list-style: none; display: flex; flex-direction: column; gap: 0.75rem; }
.check-list li::before { content: "‚úÖ  "; }
.cross-list li::before { content: "‚ùå  "; }
.check-list li, .cross-list li { color: var(--color-text-muted); line-height: 1.5; }
.steps-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
}
.step-card {
  text-align: center;
  padding: 2rem 1.5rem;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  background: rgba(108, 60, 225, 0.05);
}
.step-number {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  color: white;
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 1rem;
}
.step-card h3 { font-size: 1.1rem; margin-bottom: 0.75rem; }
.step-card p { color: var(--color-text-muted); font-size: 0.95rem; line-height: 1.6; }
.audit-cta-section { padding: 5rem 0; }
.cta-card-audit {
  text-align: center;
  background: linear-gradient(135deg, rgba(108, 60, 225, 0.15), rgba(6, 182, 212, 0.1));
  border: 1px solid rgba(108, 60, 225, 0.3);
  border-radius: var(--radius);
  padding: 4rem 2rem;
  max-width: 640px;
  margin: 0 auto;
}
.cta-card-audit h2 { font-size: 2rem; margin-bottom: 1rem; }
.cta-card-audit p {
  color: var(--color-text-muted);
  font-size: 1.05rem;
  margin-bottom: 2rem;
  line-height: 1.7;
}
.cta-note { display: block; margin-top: 1rem; font-size: 0.85rem; color: var(--color-text-muted); }

@media (max-width: 900px) {
  .option-cards {
    grid-template-columns: 1fr;
  }

  .option-card {
    padding: 1.5rem;
  }
}
</style>
